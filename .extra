alias migrate="zeus rake db:migrate db:rollback && zeus rake db:migrate db:test:prepare"
alias migrate_no_test="zeus rake db:migrate db:rollback && zeus rake db:migrate"
alias m="migrate"
alias mnt="migrate_no_test"
alias z='zeus start'
alias zs='zeus server'
alias zc='zeus console'
alias zr='zeus rake $@'

# Run specs using zeus if zeus is running
rspec() {
  if [ -S .zeus.sock ]; then
    zeus rspec "$@"
  else
    command rspec "$@"
  fi
}

