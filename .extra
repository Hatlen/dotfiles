# Create a session named after the git directory
alias git-tmux='tmux new -s $(basename $(pwd))'

# Override Paul Irish's HISTIGNORE rule
export HISTIGNORE="ls:pwd:exit:date"

# Disable the default ctrl-s binding, in favor of ctrl-s in vim
# bind -r '\C-s'
stty -ixon

# Deploy: precompile the assets add all changes and push and deploy with cap
alias deploy="git add . && git commit -m 'deploying' && git push && cap deploy"
alias deployc="bundle exec rake assets:precompile && git add . && git commit -m\
 'deploying' && git push && cap deploy"

